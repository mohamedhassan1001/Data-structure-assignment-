#include <stdio.h>

void convertToSparse(int matrix[3][3], int r, int c) 
{
    printf("Row\tColumn\tValue\n");
    for (int i = 0; i < r; i++) 
        {
        for (int j = 0; j < c; j++)
           {
            if (matrix[i][j] != 0)
                printf("%d\t%d\t%d\n", i, j, matrix[i][j]);
           }
        }
}

int main() 
{
    int mat[3][3] = {{0, 0, 5}, {0, 8, 0}, {2, 0, 0}};
    convertToSparse(mat, 3, 3);
    return 0;
}
