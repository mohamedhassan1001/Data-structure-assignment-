#include <stdio.h>
#include <stdlib.h>

int adj[20][20];
int visited[20];
int n;

void DFS(int v) {
    int i;
    visited[v] = 1;
    printf("%d ", v);

    for (i = 0; i < n; i++) {
        if (adj[v][i] == 1 && !visited[i]) {
            DFS(i);
        }
    }
}

int main() {
    int i, j, start_node;

    printf("Enter number of vertices: ");
    if(scanf("%d", &n) != 1) return 0;

    printf("Enter adjacency matrix:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &adj[i][j]);
        }
    }

    for (i = 0; i < n; i++) {
        visited[i] = 0;
    }

    printf("Enter starting node: ");
    scanf("%d", &start_node);

    printf("DFS Traversal: ");
    DFS(start_node);
    printf("\n");

    return 0;
}
