void BFS(int start, int n, int adj[n][n]) {
    int q[20], f = 0, r = 0, vis[20] = {0};
    q[r++] = start; vis[start] = 1;
    while(f < r) {
        int v = q[f++];
        printf("%d ", v);
        for(int i = 0; i < n; i++)
            if(adj[v][i] && !vis[i]) { q[r++] = i; vis[i] = 1; }
    }
}
